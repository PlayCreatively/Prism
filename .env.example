# PRISM Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Supabase Configuration (for cloud projects)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-publishable-key-here

# Secret key (optional - only needed for admin operations like migrations)
# SUPABASE_SECRET_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-secret-key-here

# ===========================================
# Auth Settings
# ===========================================
SESSION_SECRET=change-this-to-a-random-secret-key
SESSION_EXPIRY_HOURS=168

# ===========================================
# Feature Flags
# ===========================================
ENABLE_SUPABASE=true
ENABLE_PUBLIC_PROJECTS=true

# ===========================================
# OpenAI (for AI agent features)
# ===========================================
OPENAI_API_KEY=sk-your-openai-key-here
