{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "start app",
			"type": "shell",
			"command": "python app.py",
			"problemMatcher": []
		},
		{
			"label": "Build: PyInstaller",
			"type": "shell",
			"command": "powershell -ExecutionPolicy Bypass -File \"${workspaceFolder}\\scripts\\build_pyinstaller.ps1\"",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"clear": false,
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}